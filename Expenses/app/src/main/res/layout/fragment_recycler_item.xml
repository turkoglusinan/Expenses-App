<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_item_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView

        android:id="@+id/rvitem"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin_default"
        app:cardCornerRadius="@dimen/margin_double"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/riLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/margin_quadra">

            <ImageView
                android:id="@+id/riIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:iconTint="@color/black"
                app:srcCompat="@drawable/rent_icon"
                app:layout_constraintEnd_toStartOf="@id/riTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/riTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elektrik"
                android:textSize="16dp"
                android:layout_marginEnd="@dimen/margin_double"
                app:layout_constraintEnd_toStartOf="@id/riMoneyView"
                app:layout_constraintStart_toEndOf="@id/riIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/riMoneyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60TL"
                android:textSize="16dp"
                android:layout_marginLeft="@dimen/margin_quadra"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/riTextView"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>