<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding.CarouselPageFragment">

    <ImageView
        android:layout_marginTop="64dp"
        android:layout_marginEnd="@dimen/margin_quadra"
        android:layout_marginStart="@dimen/margin_quadra"
        android:id="@+id/carouselPageImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carouselPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_quadra"
        android:layout_marginTop="@dimen/margin_double"
        android:layout_marginEnd="@dimen/margin_quadra"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/carouselPageImage"
        tools:text="This is the title" />

    <TextView
        android:id="@+id/carouselPageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_quadra"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_quadra"
        android:gravity="center"
        android:textColor="@color/colorGrey"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/carouselPageTitle"
        tools:text="This is the text" />
</androidx.constraintlayout.widget.ConstraintLayout>